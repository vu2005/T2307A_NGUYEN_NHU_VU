@{
    ViewData["Title"] = "Player List";
}

<h2>Player List</h2>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>#</th>
            <th>Player Name</th>
            <th>Level</th>
            <th>Age</th>
            <th>FullName</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model) // Iterate through each player in the model (which is the list of players)
        {
            <tr>
                <td>@player.PlayerId</td>
                <td>@player.PlayerName</td>
                <td>@player.Level</td>
                <td>@player.Age</td>
                <td>@player.FullName</td>
                <td>@player.Email</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("CreatePlayer", "Player")" class="btn btn-primary mt-3">Add New Player</a>
